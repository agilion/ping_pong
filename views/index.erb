<div id="latest_games">
  <h3>Recent Games</h3>
  <table border=1>
    <thead>
      <tr>
        <td>Winner</td>
        <td>Loser</td>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td>
          Winner: <%= game.winner %>
          <%= game.winner_score %>
          <%= game.winner.rank %>
          </td>
          <td>
          Loser: <%= game.loser %>
          <%= game.loser_score %>
          <%= game.loser.rank %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>